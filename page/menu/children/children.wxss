/* page/menu/children/children.wxss */
/**index.wxss**/
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.hot-image{
  width: 100%;
  height: 300px;
}
.navbar-text {
    display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.line-text {
  font-size: 14px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}

.image-container {
    position: relative;
}

.item-mask {
    position: absolute;
    left: 0px;
    right: 0px;
    bottom: 2px;
    padding: 25px 15px 15px;
    background-image: linear-gradient(transparent, rgba(0,0,0,0.8));
}
.hot-item-title {
    display: block;
    color: #fff;
    font-size: 18px;
}
.hot-item-category {
    margin-top: 10px;
    display: block;
    color: #fff;
    font-size: 12px;
    font-weight: 100;
}
.hot-item-desc {
    display: flex;
    flex-direction: row;
    padding: 15px;
}
.hot-head-image {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    margin-right: 15px;
}
.hot-item-detail {
    width: 70%;
}
.hot-item-username {
    height: 26px;
    vertical-align: top;
    font-size: 16px;
}
.hot-location {
    font-size: 12px;
    color: #999;
    padding-top: 6px;
}
.hot-location-icon {
    width: 10px;
    height: 10px;
}

.hot-item-like {
    min-width: 40px;
    color: #e24233;
    font-size: 15px;
    border: 1px solid #e6e6e6;
    height: 16px;
    padding: 3px 10px;
    border-radius: 3px;
    margin-top: 5px;
}
.hot-like-icon {
    width: 14px;
    height: 14px;
}


.latest-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1px;
}
.latest-image {
    display: flex;
    background: #eee;
}


swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 175rpx;
    height: 220rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 26rpx;
}

.page,
.page__bd{
    height: 100%;
    background-color:  #f8f8f8;
}
.page__bd{
    padding-bottom: 0;
}



